<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.justinoud.holidaychecklist" >
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChecklistActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".DetailsChecklistActivity"
            android:label="Voeg checklist toe" >
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FriendsDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ChecklistDetailsActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
