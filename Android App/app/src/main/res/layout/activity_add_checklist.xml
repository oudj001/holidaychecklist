
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:id="@+id/add_checklist_layout"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

<EditText
    android:id="@+id/EditTextName"
    android:layout_height="wrap_content"
    android:hint="Egypte 2015"
    android:inputType="textPersonName"
    android:layout_width="fill_parent"
    android:layout_below="@+id/editText"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
</EditText>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titel"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deelnemers"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/EditTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save the checklist!"
        android:id="@+id/save_checklist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voeg afbeelding toe"
        android:id="@+id/addImage"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnDelete"
        android:layout_alignStart="@+id/btnDelete" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Verwijder afbeelding"
        android:layout_alignTop="@+id/addImage"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:id="@+id/show_image"
        android:src="@drawable/defaultplaceholder"
        android:layout_below="@+id/btnDelete"
        android:layout_alignRight="@+id/addImage"
        android:layout_alignEnd="@+id/addImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies de deelnemers"
        android:id="@+id/participants"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/EditTextName"
        android:layout_alignEnd="@+id/EditTextName" />

</RelativeLayout>