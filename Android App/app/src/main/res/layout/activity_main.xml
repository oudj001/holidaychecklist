<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">


    <ImageView
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/mainbackground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"

        android:text="Ga aan de slag!"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/subtext"
        android:layout_alignEnd="@+id/subtext"
        android:layout_marginBottom="60dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Holiday Checklist"
        android:id="@+id/title"
        android:layout_marginTop="73dp"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ga jij op vakantie met je vrienden en moet iedereen wat meenemen?"
        android:id="@+id/subtext"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="70dp"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gebruik de Holiday Checklist!"
        android:id="@+id/textView"
        android:layout_below="@+id/subtext"
        android:layout_alignLeft="@+id/subtext"
        android:layout_alignStart="@+id/subtext"
        android:layout_marginTop="63dp"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</RelativeLayout>
